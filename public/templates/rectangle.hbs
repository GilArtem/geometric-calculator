<h2>Расчет прямоугольника</h2>
<form id="figureForm" method="post" action="/calculate/rectangle">
    <input type="hidden" name="figureType" value="rectangle">
    <label for="width">Ширина:</label>
    <input type="number" id="width" name="width" required>
    <label for="height">Высота:</label>
    <input type="number" id="height" name="height" required>
    <label for="operation">Операция:</label>
    <select name="operationType" id="operation" required>
        <option value="area">Площадь</option>
        <option value="perimeter">Периметр</option>
    </select>
    <button type="submit">Рассчитать</button>
</form>
