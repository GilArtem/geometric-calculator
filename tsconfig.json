{
    "compilerOptions": {
        "target": "ES2022",                         
        "module": "ESNext",                 
        "outDir": "./dist",                      
        "rootDir": "./",                      
        "strict": true,                         
        "esModuleInterop": true,                 
        "skipLibCheck": true,                     
        "forceConsistentCasingInFileNames": true, 
        "allowJs": false,
    
    },
    "include": [
        "src/**/*",                              
        "public/**/*"
    ],
    "exclude": [
        "node_modules",                          
        "dist"                                    
    ]
}
